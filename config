set $mod Mod4
set $font "JetBrains Mono 10"
set $term alacritty --config-file $HOME/.config/sway/alacritty.yml

font $font
default_border pixel 3

seat * hide_cursor 2000

include config.d/colors
include config.d/workspaces
include config.d/resize-mode

bindsym $mod+z reload
bindsym $mod+Shift+x restart
bindsym $mod+Shift+z exit

bindsym $mod+Return exec $term -t term


for_window [title="^fzf-select$"] floating enable

bindsym $mod+p       exec $term -t fzf-select -e $HOME/.config/sway/helpers/fzf-run
bindsym $mod+Shift+p exec $HOME/.config/sway/helpers/fzf-select-pass-term-spawn $term -t fzf-select

bindsym Control+$mod+l exec swaylock -c "$based3"

bindsym XF86AudioRaiseVolume exec "pactl set-sink-volume @DEFAULT_SINK@ +4dB"
bindsym XF86AudioLowerVolume exec "pactl set-sink-volume @DEFAULT_SINK@ -4dB"
bindsym XF86AudioMute exec "pactl set-sink-mute @DEFAULT_SINK@ toggle"
bindsym XF86AudioMicMute exec "pactl set-source-mute @DEFAULT_SOURCE@ toggle"

bindsym $mod+a exec $term -t mixer -e alsamixer
bindsym $mod+Shift+a exec "pavucontrol"

bindsym $mod+F2 exec "playerctl previous"
bindsym $mod+F3 exec "playerctl play-pause"
bindsym $mod+F4 exec "playerctl next"

bindsym $mod+F1 exec "pactl set-sink-volume @DEFAULT_SINK@ +4dB"
bindsym $mod+F7 exec "pactl set-sink-volume @DEFAULT_SINK@ -4dB"
bindsym $mod+F8 exec "pactl set-sink-mute @DEFAULT_SINK@ toggle"

input * {
	xkb_layout pl
	xkb_options ctrl:nocaps
}

include config.d/bar
include config.d/autostart
include config.d/local

exec systemctl --user import-environment DISPLAY WAYLAND_DISPLAY SWAYSOCK
exec hash dbus-update-activation-environment 2>/dev/null && \
     dbus-update-activation-environment --systemd DISPLAY WAYLAND_DISPLAY SWAYSOCK
exec echo 'Xft.dpi: 96' |  xrdb -load
